---
import { linkSource } from "../assets/data";

const links: App.NavLink[] = linkSource;
---

<nav class="fixed w-full bg-white border-gray-20 z-10">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-center sm:justify-between mx-auto p-4"
  >
    <a href="/">
      <img src="images/logotipo.webp" alt="logotipo" class="h-12" />
    </a>

    <div class="flex">
      <ul class="font-medium p-4 flex gap-2">
        {
          links.map((l) => (
            <li>
              <a
                href={l.url}
                class="p-1 text-black hover:text-red-500 text-sm transition-all"
              >
                {l.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
