---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Pagina no encontrada">
  <section class="h-[100vh] flex flex-col justify-center">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div
        class="flex flex-col justify-center mx-auto max-w-screen-sm text-center"
      >
        <h1 class="text-9xl tracking-tight font-extrabold text-black">404</h1>
        <p class="mb-8 text-xl tracking-tight font-bold text-black md:text-4xl">
          Pagina no encontrada
        </p>

        <button>
          <a href="/" class="text-black transition-all hover:text-red-400"
            >Volver al inicio</a
          >
        </button>
      </div>
    </div>
  </section>
</Layout>
